package source;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

public class FileWriterThread {

	public FileWriterThread()
	{
		System.out.println("Thread Created");
	}
	
	public void run()
	{
		try {
			BufferedWriter writer = new BufferedWriter(new FileWriter(ADFGX.currentFile));
			while(!ADFGX.writeToFileQueue.isEmpty() || ADFGX.line.toLowerCase().equals("fedcba"))
			{
				if(!ADFGX.writeToFileQueue.isEmpty())
				{
					String[] stringToWrite = ADFGX.writeToFileQueue.poll();
					for(int i = 0; i < stringToWrite.length; ++i)
					{
						writer.write(stringToWrite[i]);
					}
					writer.newLine();
				}
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
