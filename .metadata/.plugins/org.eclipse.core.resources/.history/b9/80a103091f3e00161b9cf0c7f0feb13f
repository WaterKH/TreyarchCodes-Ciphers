			return false;
		}
		
		return false;
	}
	
	public String getPattern(String word)
	{
		String pattern = "";
		
		for(int i = 0; i < word.length(); ++i)
		{
			String letter = Character.toString(word.charAt(i));
			
			if(vowel.contains(letter))
			{
				pattern += "V";
			}
			else if(consonant.contains(letter))
			{
				pattern += "C";
			}
		}
		
		return pattern;
	}
}
