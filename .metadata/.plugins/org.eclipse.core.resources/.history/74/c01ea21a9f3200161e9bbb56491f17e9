package source;

public class ContactLetter_CVPatterns {

	public int cipherTextLength = 0;
	public int cipherTextStart = 0;
	public int cipherTextEnd = 0;
	
	public String vowel = "aeiou";
	public String consonant = "bcdfghjklmnpqrstvwxyz";
	
	public boolean testPattern(String cipherText)
	{
		switch(cipherTextLength)
		{
		case 1: // V
			if(vowelCheck(cipherText, 0))
			{
				return true;
			}
			break;
		case 2: // V C
			if(vowelCheck(cipherText, 0) && consonantCheck(cipherText, 1))
			{
				return true;
			}
			break;
		case 3: // C C _
			if(consonantCheck(cipherText, 0) && consonantCheck(cipherText, 1))
			{
				return true;
			}
			break;
		case 4: // C V _ C
			if(consonantCheck(cipherText, 0) && vowelCheck(cipherText, 1) && consonantCheck(cipherText, 3))
			{
				return true;
			}
			break;
		case 5: // C C V C C
			if(consonantCheck(cipherText, 0) && consonantCheck(cipherText, 1) && vowelCheck(cipherText, 2) && consonantCheck(cipherText, 3) && consonantCheck(cipherText, 4))
			{
				return true;
			}
			break;
		case 6: // C V C _ _ C
			if(consonantCheck(cipherText, 0) && vowelCheck(cipherText, 1) && consonantCheck(cipherText, 2) && consonantCheck(cipherText, cipherText.length() - 1))
			{
				return true;
			}
			break;
		case 7: // C V C C _ _ C
			if(consonantCheck(cipherText, 0) && vowelCheck(cipherText, 1) && consonantCheck(cipherText, 2) && consonantCheck(cipherText, 3) && 
					consonantCheck(cipherText, cipherText.length() - 1))
			{
				return true;
			}
			break;
		default:
			return false;
		}
		
		return false;
	}
	
	private boolean vowelCheck(String letter, int begin)
	{
		if(vowel.contains(letter.substring(begin, begin + 1)))
		{
			return true;
		}
		
		return false;
	}
	
	private boolean consonantCheck(String letter, int begin)
	{
		if(consonant.contains(letter.substring(begin, begin + 1)))
		{
			return true;
		}
		
		return false;
	}
}
