package source;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class FormatBook {
	
	public static void main(String[] args) throws IOException 
	{
		String[] books = {"Moby_Dick", "TaleOfTwoCities"};
		for(int i = 0 ; i < books.length; ++i)
		{
			BufferedReader reader = new BufferedReader(new FileReader(books[i] + ".txt"));
			BufferedWriter writer = new BufferedWriter(new FileWriter(books[i] + "_Formatted.txt"));
			String line = "";
			String result = "";
			
			while((line = reader.readLine()) != null)
			{
				result += line.replaceAll("[^\\w\\s]","");
				result = result.toLowerCase();
				//result = result.replaceAll("\\s+", "");
				result = result.replaceAll("\\d+", "");
			}
			writer.write(result);
			
			reader.close();
			writer.close();
		}
		System.out.println("Finished");
	}
}
