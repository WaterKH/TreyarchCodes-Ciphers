		for(int i = 0; i < keys.length; ++i)
		{
			File file = new File("adfgxSolved" + keys[i] + ".txt");
			File fileToWrite = new File("adfgx_Single-" + keys[i] + ".txt");//"/Volumes/Jacob Clark/_PhrasesCOD/adfgx-" + keys[i] + ".txt");
