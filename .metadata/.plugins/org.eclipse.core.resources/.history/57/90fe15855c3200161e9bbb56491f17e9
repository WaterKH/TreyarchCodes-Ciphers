package source;

public class ContactLetter_CVPatterns {

	public int wordLength = 0;
	public int wordStart = 0;
	public int wordEnd = 0;
	
	public String vowel = "aeiou";
	public String consonant = "bcdfghjklmnpqrstvwxyz";
	
	public boolean testPattern(String letter)
	{
		switch(wordLength)
		{
		case 1: // V
			if(vowelCheck(letter, 0))
			{
				return true;
			}
			break;
		case 2: // V C
			if(vowelCheck(letter, 0) && consonantCheck(letter, 1))
			{
				return true;
			}
			break;
		case 3: // C C _
			if(consonantCheck(letter, 0) && consonantCheck(letter, 1))
			{
				return true;
			}
			break;
		case 4: // C V _ C
			if(consonantCheck(letter, 0) && vowelCheck(letter, 1) && consonant.contains(letter.substring(3, letter.length())))
			{
				return true;
			}
			break;
		case 5: // C C V C C
			if(consonant.contains(letter.substring(0, 1)) && consonant.contains(letter.substring(1, 2)) && vowel.contains(letter.substring(2, 3)) 
					&& consonant.contains(letter.substring(3, 4)) && consonant.contains(letter.substring(4, letter.length())))
			{
				return true;
			}
			break;
		case 6: // C V C _ _ C
			if(consonant.contains(letter.substring(0, 1)) && vowel.contains(letter.substring(1, 2)) && vowel.contains(letter.substring(2, 3)) 
					&& consonant.contains(letter.substring(3, 4)) && consonant.contains(letter.substring(4, letter.length())))
			{
				return true;
			}
			break;
		case 7: // C V C C _ _ C
			break;
		default:
			return false;
		}
		
		return false;
	}
	
	public boolean vowelCheck(String letter, int begin)
	{
		if(vowel.contains(letter.substring(begin, begin + 1)))
		{
			return true;
		}
		
		return false;
	}
	
	public boolean consonantCheck(String letter, int begin)
	{
		if(consonant.contains(letter.substring(begin, begin + 1)))
		{
			return true;
		}
		
		return false;
	}
}
