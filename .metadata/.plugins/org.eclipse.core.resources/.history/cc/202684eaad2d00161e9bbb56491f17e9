package source;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.HashMap;
import java.util.Map;

public class ContactLetter_MAIN {

	public static void main(String[] args) throws IOException 
	{
		String alphabet = "abcdefghijklmnopqrstuvwxyz";
		Map<String, ContactLetters> listOfContacts = new HashMap<String, ContactLetters>();
		
		for(int i = 0; i < alphabet.length(); ++i)
		{
			String key = Character.toString(alphabet.charAt(i));
			
			listOfContacts.put(key, new ContactLetters(key));
		}
		
		BufferedReader reader = new BufferedReader(new FileReader("Moby_Dick_FORMAT.txt"));
		String line = "";
		
		System.out.println("Started Reading");
		
		while((line = reader.readLine()) != null)
		{
			String previousLetter = "";
			String followingLetter = "";
			
			for(String letter : line.split(""))
			{
				letter = letter.toLowerCase();
				
				if(followingLetter.length() > 0 && previousLetter.length() > 0)
				{
					listOfContacts.get(letter).addToBefore(followingLetter);
					listOfContacts.get(letter).addToAfter(previousLetter);
					listOfContacts.get(letter).increaseTotalContactLetters();
				}
				
				if((line.indexOf(letter) + 1) > line.length() - 1)
				{
					System.out.println("Limit");
				}
			}
		}

		System.out.println("Finished Reading");
		
		// Search through every contact letter for each of those contact letters before and after
		for(int i = 0; i < alphabet.length(); ++i)
		{
			String letter = Character.toString(alphabet.charAt(i));
			for(int j = 0; j < alphabet.length(); ++j)
			{
				String percLetter = Character.toString(alphabet.charAt(j));
				System.out.println(listOfContacts.get(letter).getTotalContactLetters());
				//System.out.println(listOfContacts.get(letter).getBeforePercentage(percLetter) + 
					//	" " + listOfContacts.get(letter).getAfterPercentage(percLetter));
			}
		}
		
		System.out.println("Finished Program");
	}

}
