package source;

public class ContactLetter_CVPatterns {

	public int wordLength = 0;
	public int wordStart = 0;
	public int wordEnd = 0;
	
	public String vowel = "aeiou";
	public String consonant = "bcdfghjklmnpqrstvwxyz";
	
	public boolean testPattern(String letter)
	{
		switch(wordLength)
		{
		case 1:
			if(vowel.contains(letter.substring(0)))
			{
				return true;
			}
			break;
		default:
			return false;
		}
		
		return false;
	}
}
