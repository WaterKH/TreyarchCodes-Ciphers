package source;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;

public class FormatBook {
	
	public static void main(String[] args) throws IOException 
	{
		System.out.print("Select a book: ");
		@SuppressWarnings("resource")
		Scanner keyboard = new Scanner(System.in);
		String book = keyboard.next();
		
		System.out.println("Processing..");
		
		BufferedReader reader = new BufferedReader(new FileReader(book));
		BufferedWriter writer = new BufferedWriter(new FileWriter(book + "_Formatted.txt"));
		String line = "";
		String result = "";
		
		while((line = reader.readLine()) != null)
		{
			result += line.replaceAll("[^\\w\\s]","");
			result = result.toLowerCase();
			//result = result.replaceAll("\\s+", "");
			result = result.replaceAll("\\d+", "");
		}
		writer.write(result);
		
		reader.close();
		writer.close();
		System.out.println("Finished");
	}
}
